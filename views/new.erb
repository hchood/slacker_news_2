<h2>Add an article</h2>

<form action="/articles" method="post">
  <div>
    <label>Title</label>
    <input name="title">
  </div>

  <div>
    <label>URL</label>
    <input name="url">
  </div>

  <div>
    <label>Description</label>
    <input name="description">
  </div>

  <div>
    <label>Posted by</label>
    <input name="user_name">
  </div>

  <div>
    <input type="submit" value="Submit">
  </div>
</form>
